@import url("//fonts.googleapis.com/css?family=Roboto\+Slab400,700|Roboto400,700,700italic,400italic")

html
  font-family 'Roboto Slab', serif
  font-size 100% !important

body
  font-size 20px !important

tbody
  tr
    border 1px solid #ccc

div[ui-view]
  margin 0
  min-height 100%
  width 100%

[layout=row]
  flex-direction row

md-toolbar
  &.md-default-theme
    background-color purple

md-dialog-content
  max-width 800px
  max-height 810px
  min-width 810px

.md-button
  font-size 30px

md-input-container.md-input-invalid .md-input
  border-color red
  border-bottom-width 2px

md-input-container
  .ng-valid, .ng-valid md-select-value
    border-color lightgreen
    border-bottom-width 2px

.no-animate
  -webkit-transition none !important
  transition none !important

.md-table-content.md-table-content
  padding 0px
  height 60px

.state_1 md-icon
  color black !important
.state_2 md-icon
  color pink !important
.state_3 md-icon
  color #D185B7 !important
.state_4 md-icon
  color lightblue !important
.state_5 md-icon
  color blue !important

md-button.action
  height 24px
  width 24px

.action md-icon
  height 48px
  width 48px

.poster
  width 260px
  height 400px
  margin-right 20px

.synopsis
  p
    margin 0

md-toast.md-success-toast-theme
  background-color lightgreen
  color black
md-toast.md-error-toast-theme
  background-color #7F1917
  color white

md-content
  overflow initial

.md-button.md-primary:not([disabled]).unlinked md-icon
  color black

.md-button.md-primary:not([disabled]).unseen md-icon
  color black

md-toast
  z-index 10000

  &.md-top
    position fixed

  &.md-right
    position fixed

// bootstrap style to ui-select
.dropdown
  position relative

.form-control
  display block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  -webkit-transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

  input
    width 100%

.dropdown-menu
  position absolute
  top 100%
  left 0
  z-index 1000
  display none
  float left
  min-width 160px
  padding 5px 0
  margin 2px 0 0
  font-size 14px
  list-style none
  background-color #fff
  background-clip padding-box
  border 1px solid #ccc
  border 1px solid rgba(0, 0, 0, .15)
  border-radius 4px
  -webkit-box-shadow 0 6px 12px rgba(0, 0, 0, .175)
  box-shadow 0 6px 12px rgba(0, 0, 0, .175)

ul, ol
  margin-top 0
  margin-bottom 10px


.dropdown-menu .divider
  height 1px
  margin 9px 0
  overflow hidden
  background-color #e5e5e5

.dropdown-header
  display block
  padding 3px 20px
  font-size 12px
  line-height 1.42857143
  color #999

.open > .dropdown-menu
  display block

span.btn-xs, .btn-group-xs > .btn
  padding 1px 5px
  font-size 12px
  line-height 1.5
  border-radius 3px

span.btn-default
  color #333
  background-color #fff
  border-color #ccc

.btn
  display inline-block
  padding 6px 12px
  margin-bottom 0
  font-size 14px
  font-weight normal
  line-height 1.42857143
  text-align center
  white-space nowrap
  vertical-align middle
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  background-image none
  border 1px solid transparent
  border-radius 4px

.close
  float right
  font-size 21px
  font-weight bold
  line-height 1
  color #000
  text-shadow 0 1px 0 #fff
  opacity .2


